<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WahaPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorControlNormal">@color/green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8dp</item>
        <item name="android:fontFamily">@font/directive_four</item>
    </style>

    <style name="Theme.WahaPlayer.DarkSearchViewTheme">
        <item name="colorControlNormal">@color/green</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>