<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    tools:context=".UI.ProtocolInfo"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <com.bruh.wahaplayer.UI.Typewriter
        android:id="@+id/protocol_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@+id/protocol_expand"
        android:layout_toRightOf="@+id/protocol_order"
        android:text="Protocol name + description"
        android:textColor="@color/green"
        android:textSize="20dp" />

    <Button
        android:id="@+id/protocol_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:fontFamily="@font/necron"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text=" "
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/protocol_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetRight="0dp"
        android:background="@color/transparent"
        android:fontFamily="@font/necron"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:text="a"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>