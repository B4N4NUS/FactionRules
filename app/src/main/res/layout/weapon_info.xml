<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableLayout
        android:id = "@+id/model_table"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="20dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:fontFamily="@font/directive_four_bold"
                android:text="Weapon" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:singleLine="true"
                android:minWidth="50dp"
                android:fontFamily="@font/directive_four_bold"
                android:text="Range" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="40dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:fontFamily="@font/directive_four_bold"
                android:text="Type" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="30dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:fontFamily="@font/directive_four_bold"
                android:text="S" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="30dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:fontFamily="@font/directive_four_bold"
                android:text="AP" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="30dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:fontFamily="@font/directive_four_bold"
                android:text="D" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/green"
                android:minWidth="40dp"
                android:fontFamily="@font/directive_four_bold"
                android:text="Abilities" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxWidth="80dp"
                android:textColor="@color/green"
                android:text="Name" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="range" />
            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="type" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="S" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="AP" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="D" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/model_weapon_abilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:maxWidth="150dp"
                android:text="abilities"
                android:singleLine="false"/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/model_table"
        app:srcCompat="@drawable/line" />
</RelativeLayout>